      <div xml:id="Someday"> 
              <interpGrp type="poembox">
                <interp ana="#form" type="haiku"></interp>
                <interp ana="#tone" type="sad"></interp>
                <interp ana="#topic" type="love"></interp>
              </interpGrp>
             <lg> 
              <l>Someday you will cry for me</l>
          <l>Like I cried for you.</l> 
          <l>Someday you'll miss me</l>
          <l>Like I missed you.</l>
          <l>Someday you'll need me</l>
          <l>Like I needed you.</l>
          <l>Aomeday you'll love me</l>
          <l>But I won't love you.</l>
         
                 
