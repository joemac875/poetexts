      <div xml:id="NatureKnowItsMath"> 
              <interpGrp type="poembox">
                <interp ana="#form" type="freeverse"></interp>
                <interp ana="#tone" type="free"></interp>
                <interp ana="#topic" type="nature"></interp>
              </interpGrp>
             <lg> 
              <l>Divide</l>
          <l>the year</l> 
          <l>into seasons,</l>
          <l>four,</l>
          <l>subtract</l>
          <l>the snow then</l>
          <l>add</l>
          <l>some more</l>
          <l>green,</l> 
          <l>a bud,</l>
          <l>a breeze,</l>
          <l>a whispering</l>
          <l>behind</l>
          <l>the trees,</l>
          <l>and here</l>
          <l>beneath the</l>
          <l>rain-scrubbed</l>
          <l>sky</l>
          <l>orange poppies</l>
          <l>multipy.</l>
          
               <!-- You can put comments or notes to yourself in like this -->
             </lg>
