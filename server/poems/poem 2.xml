      <div xml:id="haiku"> 
              <interpGrp type="poembox">
                <interp ana="#form" type="Haiku"></interp>
                <interp ana="#tone" type="happy"></interp>
                <interp ana="#topic" type="love"></interp>
              </interpGrp>
             <lg> 
              <l>love between us is</l>
          <l>speech and breath. loving you is</l> 
          <l>a long river running.</l>
          
                 
               <!-- metaphorical comparison of love to basic needs, perpetuating nature -->
             </lg>
